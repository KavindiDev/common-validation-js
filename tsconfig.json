{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node16",
        "module": "Node16",
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}